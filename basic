syntax on
set shiftwidth=4
set tabstop=4
set expandtab
set nocompatible             
filetype off                  
set backspace=2 "delete 
let g:airline_theme='wombat'
set laststatus=2
set nu

function! NumberToggle()
    if(&nu == 1)
        set nu!
        set rnu
    else
        set nornu
        set nu
    endif
endfunction

nnoremap <C-n> :call NumberToggle()<CR>
map <F2> :NERDTreeToggle<CR>
